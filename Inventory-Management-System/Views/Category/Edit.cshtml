@model Category

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Category</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: rgba(0, 0, 0, 0.6); /* Dark background with opacity */
            font-family: Arial, sans-serif;
            height: 100vh;
            margin: 0;
        }

        .container-fluid {
            background-color: #e9ecef;
        }

        .form-box {
            position: relative; /* Make the X button relative to this container */
            background-color: #f8f9fa;
            padding: 50px;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 450px;
            margin: auto;
        }

            .form-box h3 {
                margin-bottom: 30px;
                font-weight: 600;
                text-align: center;
            }

        .form-label {
            font-weight: 500;
            color: #333;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #ced4da;
        }

            .form-control:focus {
                border-color: #80bdff;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            }

        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 12px 20px;
            border-radius: 8px;
            font-weight: 600;
            transition: background-color 0.3s;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        /* Style for the X (Cancel) button */
        .cancel-btn {
            position: absolute;
            top: 7px;
            right: 10px;
            background: none;
            border: none;
            font-size: 50px;
            color: #6153fa;
            cursor: pointer;
            z-index: 1000;
            margin-right: 20px;
            /* margin-bottom: -42px; */
        }

            .cancel-btn:hover {
                color: #dc3545;
            }

        /* Center the form container and ensure consistent height */
        .add-view-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 85vh;
            background-color: #e9ecef; /* Light grey background outside the form */
        }

    </style>
</head>

<body>
    <div class="add-view-container">
        <div class="form-box">
            <!-- X (Cancel) Button -->
            <button type="button" class="cancel-btn" onclick="window.location.href='/Category/Index'">&times;</button>

            <h3>Edit Category</h3>
            <form asp-action="SaveEdit" asp-controller="Category" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <input type="hidden" name="id" value="@Model.ID" />
                <div class="mb-3">
                    <label asp-for="Name"></label>
                    <input type="text" placeholder="Enter Name" class="form form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description"></label>
                    <input type="text" placeholder="Enter Description" class="form form-control" asp-for="Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Add Category</button>
                </div>
            </form>
        </div>
    </div>
    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>

</html>
