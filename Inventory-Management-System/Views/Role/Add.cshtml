@model RoleViewModel

@{
    ViewData["Title"] = "Add Role";
}

<!-- Main Container -->
<div class="container d-flex justify-content-center align-items-center" style="min-height: 63vh;">
    <div class="card" style="max-width: 400px; width: 100%; border-radius: 16px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
        <div class="card-body">
            <h2 class="card-title text-center mb-4 text-primary">Add Role</h2>
            <hr />

            <!-- Success Message -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }

            <!-- Form Start -->
            <form asp-action="SaveRole" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="RoleName" class="control-label">Role Name</label>
                    <input asp-for="RoleName" class="form-control" placeholder="Enter role name" style="border-radius: 10px;" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary" style="border-radius: 10px; width: 100%;" />
                </div>
            </form>
            <!-- Form End -->
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" asp-controller="Home">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
