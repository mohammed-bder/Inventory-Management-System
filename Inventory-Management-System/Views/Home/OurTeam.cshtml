    <style>
        /*----------------------------------cards------------------------*/
        body {
            background-color: white; /* Background color */
            color: white; /* Default text color */
            font-family: sans-serif;
        }

        .OurTeam-card {
            margin: 0;
           @*  padding: 100px 0px; *@
            height: 100%;
            box-sizing: border-box;
        }

        .OurTeam-card h1 {
            text-align: center;
                color: #F21667; /* Heading color */
            font-size: 45px;
            padding-bottom: 40px;
        }

        .cards-in-row {
            display: flex;
            align-items: stretch; /* Ensure all items stretch to the same height */
            justify-content: center;
            width: 100%;
            min-height: 300px;
            margin: auto;
            margin-bottom: 5%;
            flex-wrap: wrap;
        }

        .our-team {
            text-align: center;
            border-radius: 20px;
            overflow: hidden;
            position: relative;
            padding: 30px 0px 40px;
            margin: 0px 20px;
            width: 21%;
            transition: transform 0.3s, box-shadow 0.3s;
            background-color: #1A1E3A; /* Team card background color */
        }

        .our-team:hover {
            transform: scale(1.05); /* Scale effect on hover */
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2); /* Add shadow effect on hover */
        }

        .our-team .pic {
            display: inline-block;
            width: 250px;
            height: 250px;
            margin-bottom: 15px;
            z-index: 1;
            position: relative;
        }

        .our-team .pic img {
            object-fit: cover;
            width: 100%;
            height: 100%;
            border-radius: 50%;
            transform: scale(1);
            transition: all 0.9s ease 0s;
        }

        .our-team:hover .pic img {
            box-shadow: 0 0 0 14px #fff;
            transform: scale(0.7);
        }

        .our-team .pic::before {
            content: "";
            width: 100%;
            height: 0;
            border-radius: 50%;
                background: #F21667; /* Background for the before element */
            position: absolute;
            bottom: 135%;
            right: 0;
            left: 0;
            opacity: 0.2;
            transform: scale(3);
            transition: all 0.3s linear 0s;
        }

        .our-team:hover .pic::before {
            height: 100%;
        }

        .our-team .pic::after {
            content: "";
            width: 100%;
            height: 100%;
            border-radius: 50%;
                background: #F21667; /* Background for the after element */
            position: absolute;
            top: 0;
            left: 0;
            z-index: -1;
        }

        .our-team .team-content {
            margin-bottom: 30px;
        }

        .our-team .title {
            font-size: 22px;
            font-weight: 700;
            color: white; /* Title color */
            letter-spacing: 1px;
            margin-bottom: 5px;
        }

        .our-team .post {
            display: block;
            font-size: 15px;
            color: white; /* Post color */
        }

        .our-team .social {
            width: 100%;
            padding: 0;
            margin: 0;
            background: #F21667; /* Social background color */
            position: absolute;
            bottom: -100px;
            left: 0;
            transition: all 0.5s ease 0s;
        }

        .our-team:hover .social {
            bottom: 0;
        }

        .our-team .social li {
            display: inline-block;
        }

        .our-team .social li a {
            text-decoration: none;
            display: block;
            padding: 10px;
            font-size: 17px;
            color: white; /* Social icon color */
            transition: all 0.3s ease 0s;
        }

        .our-team .social li a:hover {
            color: #0B0F26; /* Hover color for social icons */
            background: #F21667; /* Hover background for social icons */
        }

        @@media (max-width: 1024px) {
            .our-team {
                width: 45%;
                margin: 0 10px;
            }
        }

        @@media (max-width: 720px) {
            .our-team {
                width: 90%;
                margin: 10px auto;
            }
        }
    </style>
