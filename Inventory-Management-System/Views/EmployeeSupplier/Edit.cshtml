@model EmployeeSupplierWithSupplierList
@{
    SelectList SupOption = new SelectList(Model.Suppliers, "ID", "Name");
    SelectList ProductOption = new SelectList(Model.Products, "ID", "Name");
    SelectList EmpOption = new SelectList(Model.Employees, "ID", "FName");
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Employee</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: rgba(0, 0, 0, 0.6); /* Dark background with opacity */
            font-family: Arial, sans-serif;
            height: 100vh;
            margin: 0;
        }

        .container-fluid {
            background-color: #e9ecef;
        }

        .form-box {
            position: relative; /* Make the X button relative to this container */
            background-color: #f8f9fa;
            padding: 50px;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 450px;
            margin: auto;
        }

            .form-box h3 {
                margin-bottom: 30px;
                font-weight: 600;
                text-align: center;
            }

        .form-label {
            font-weight: 500;
            color: #333;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #ced4da;
        }

            .form-control:focus {
                border-color: #80bdff;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            }

        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 12px 20px;
            border-radius: 8px;
            font-weight: 600;
            transition: background-color 0.3s;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        /* Style for the X (Cancel) button */
        .cancel-btn {
            position: absolute;
            top: 7px;
            right: 10px;
            background: none;
            border: none;
            font-size: 50px;
            color: #6153fa;
            cursor: pointer;
            z-index: 1000;
            margin-right: 20px;
            /* margin-bottom: -42px; */
        }

            .cancel-btn:hover {
                color: #dc3545;
            }

        /* Center the form container and ensure consistent height */
        .add-view-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 85vh;
            background-color: #e9ecef; /* Light grey background outside the form */
        }

    </style>
</head>

<body>
    <div class="add-view-container">
        <div class="form-box">
            <!-- X (Cancel) Button -->
            <button type="button" class="cancel-btn" onclick="window.location.href='/EmployeeSupplier/NewlyCreatedReceipts'">&times;</button>

            <h3>Edit Receipt</h3>
            <form asp-action="SaveEdit" asp-controller="EmployeeSupplier" method="post">
                <!-- Supplier Dropdown -->
                <div class="mb-3">
                    <input type="hidden" name="ID" value="@Model.Id" />
                    <label asp-for="SupplierID">Supplier</label>
                    <select asp-for="SupplierID" asp-items="SupOption" class="form-control">
                        <option value="">-- Select Supplier --</option>
                    </select>
                    <span asp-validation-for="SupplierID" class="text-danger"></span>
                </div>

                <!-- Product Dropdown -->
                <div class="mb-3">
                    <label asp-for="ProductIdentifier">Product</label>
                    <select class="form form-control" asp-for="ProductIdentifier" asp-items="ProductOption">
                        <option value="">--Select Product--</option>
                    </select>
                    <span asp-validation-for="ProductIdentifier" class="text-danger"></span>
                </div>

                <!-- Employee Dropdown -->
                <div class="mb-3">
                    <input asp-for="EmployeeID" value="@ViewBag.EmpId" type="hidden" />
                </div>

                <div class="mb-3">
                    <label asp-for="TotalCost"></label>
                    <input type="number" placeholder="Enter Total Cost" class="form form-control" asp-for="TotalCost" />
                    <span asp-validation-for="TotalCost" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Quantity"></label>
                    <input type="number" placeholder="Enter Quantity" class="form form-control" asp-for="Quantity" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Edit Receipt</button>
                </div>
            </form>
        </div>
    </div>
    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>

</html>
