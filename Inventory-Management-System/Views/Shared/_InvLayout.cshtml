        }

        .content {
            flex: 1; /* Take up remaining space */
            /* Add styles for your content here */
        }

        /* Fresh Footer Styling */
        
        .footerr {
            background-color: #0B0F26;
            color: #F21667; /* Light gray text for contrast */
