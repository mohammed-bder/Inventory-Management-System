        *@

        .footer-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 25px; /* Spacing between elements */
           margin-bottom: 0px;
    margin-top: 5px;
        }

        /* Footer link styling */
        .footer-text {
            font-size: 18px;
            font-family: 'Montserrat', sans-serif; /* Modern, geometric font */
            font-weight: 600; /* Slightly bolder for emphasis */
        }

            .footer-text a {
                color: white; /* Warm orange accent color */
                text-decoration: none;
                padding: 12px 24px; /* More padding for a button-like appearance */
