        }

        <!-- Log out button -->
        <div class="logout" style="margin-left: 8px; font-size:15px;">
            <a href="/Account/SignOut">
                <i class="fas fa-sign-out-alt" style="margin-right: 10px;"></i>
                <span class="link-name">Log out</span>
            </a>
        </div>
